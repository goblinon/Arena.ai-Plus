{
  "manifest_version": 3,
  "name": "Arena.ai Plus",
  "version": "2.1.2",
  "description": "Enhances Arena.ai leaderboards with Pricing, Bang for Buck, Context Size & Modalities columns, plus gen alerts!",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.helicone.ai/*",
    "https://raw.githubusercontent.com/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://arena.ai/*"
      ],
      "js": [
        "shared.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "icons/*.svg"
      ],
      "matches": [
        "https://arena.ai/*"
      ]
    }
  ]
}